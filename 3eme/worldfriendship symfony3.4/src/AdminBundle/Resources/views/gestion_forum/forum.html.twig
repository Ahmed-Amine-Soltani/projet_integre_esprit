{% extends 'dashboard.html.twig' %}
{% block content %}
    <!-- line modal -->

    <div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    
                </div>
                <div class="modal-body">
                    <!-- content goes here -->
                    <form action="" method="POST">
                        <div class="form-group">


                            {{ form_start(form) }}

                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default" data-dismiss="modal"  role="button">Fermer</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="main-panel">

        <div class="content">
            <div class="center" align="center"><button data-toggle="modal"
                                                       data-target="#squarespaceModal"
                                                       class="btn-default btn-big btn-fill">Ajouter Categorie</button></div>
            <div class="container-fluid">
                <p class="page-title page-product">




                <div class="row row-card-no-pd product-view">

                    <div class="col-md-12">

                        <table id="example" class="table table-striped table-bordered" style="  width:100%">
                            <thead>
                            <tr>
                                <th class="col-md-1 col-xs-1"> Categories : </th>
                                <th class="col-md-1 col-xs-1"> Action</th>


                            </tr>
                            </thead>

                            {% for f in cat %}
                            <tr>
                                <td>{{ f.nom }}</td>

                                <td>
                                    <a href="{{ path("admin_supppage",{'id':f.id}) }}">
                                        <button type="button" data-toggle="tooltip" title="Remove"
                                                class="btn btn-link btn-simple-danger">
                                            <i class="fa fa-times"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}

                        </table>
                    </div>


                </div>
            </div>
        </div>

    </div>



{% endblock %}
