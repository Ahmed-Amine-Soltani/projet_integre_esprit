                                            </div>
                                        </div>
                                    </div>




                                </div>





                            </div>

                        </div>
                        <div class="col-lg-7">
                            <div class="billing-details">
                                <h3 class="ck-title">Product</h3>
                                <div class="row">

                                    @{
                                        var item1 = Model;
                                        var base64 = Convert.ToBase64String(item1.Img1);
                                        var imgsrc1 = string.Format("data:image/gif;base64,{0}", base64);

                                        var item2 = Model;
                                        base64 = Convert.ToBase64String(item2.Img2);
                                        var imgsrc2 = string.Format("data:image/gif;base64,{0}", base64);

                                        var item3 = Model;
                                        base64 = Convert.ToBase64String(item3.Img3);
                                        var imgsrc3 = string.Format("data:image/gif;base64,{0}", base64);

                                    }


