@model CloudKids.Domain.Entities.Product
@{
    ViewBag.Title = "add Product";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<head>
    <style>
        .image-upload1 > input {
            display: none;
        }

